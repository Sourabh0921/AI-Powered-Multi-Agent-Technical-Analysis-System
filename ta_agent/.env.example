# Technical Analysis Agent - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# LLM/AI PROVIDERS
# ============================================================================
GROQ_API_KEY=gsk_your-groq-api-key-here
GOOGLE_API_KEY=your-google-api-key-here
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

LLM_MODEL=openai/gpt-oss-120b
LLM_TEMPERATURE=0.3
DEFAULT_LLM_PROVIDER=groq

# ============================================================================
# DATABASE
# ============================================================================
# DATABASE_URL=sqlite:///./data/ta_agent.db
DATABASE_URL=postgresql://ta_user:ta_0921@localhost:5432/ta_agent

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# ============================================================================
# SENTIMENT ANALYSIS API KEYS
# ============================================================================

# News API - Free tier: 100 requests/day
# Sign up at: https://newsapi.org/
NEWSAPI_KEY=your-newsapi-key-here

# Alpha Vantage - Free tier: 25 requests/day
# Sign up at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_KEY=your-alpha-vantage-key-here

# Finnhub - Free tier: 60 requests/minute
# Sign up at: https://finnhub.io/register
FINNHUB_KEY=your-finnhub-key-here

# Twitter/X API - Required for Twitter sentiment
# Apply at: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=your-twitter-bearer-token-here

# Reddit API - Free, no rate limits for read-only access
# Create app at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret

# StockTwits - Free tier available
# Get token at: https://api.stocktwits.com/developers/docs/authentication
STOCKTWITS_TOKEN=your-stocktwits-token-here

# ============================================================================
# SENTIMENT CONFIGURATION
# ============================================================================
SENTIMENT_ENABLED=True
SENTIMENT_CACHE_TTL=600

# Sentiment Source Weights (Must sum to 1.0)
SENTIMENT_NEWS_WEIGHT=0.35
SENTIMENT_SOCIAL_WEIGHT=0.30
SENTIMENT_SEC_WEIGHT=0.20
SENTIMENT_EARNINGS_WEIGHT=0.15

# ============================================================================
# STREAMLIT DASHBOARD
# ============================================================================
STREAMLIT_SERVER_PORT=8501
